        <button id="refreshOffers" class="btn btn-success btn-xs" onClick="return false;"
            style="display: none">Show Offers</button>

        <div id="scheduler"></div>


        <script>
        var brand = new Array();
        var accStr = '';
        var region = '';
        
            $(document).ready(function() {



                
                $("input:checkbox:checked").each(function() {
                    if (this.checked) {
                        brand.push(this.value);
                    }
                }); //end


                $("#scheduler").kendoScheduler({
                    date: new Date().toLocaleDateString(),
                    showWorkHours: true,
					workWeekStart: 0,
                    workWeekEnd: 4,
                    //height: 600,
                    views: [
                        "day", {
                            type: "workWeek",
                            selected: true
                        },
                        "week",
                        "month",
                        "agenda", {
                            type: "timeline",
                            eventHeight: 50
                        }
                    ],
                    timezone: "Etc/UTC",
                    editable: false,
                    eventTemplate: $("#myEvents").html()

                }); //end

                $("#scheduler").kendoTooltip({
                    filter: ".k-event:not(.k-event-drag-hint) > div, .k-task",
                    position: "top",
                    width: 250,
                    content: kendo.template($('#template').html())
                }); //end

                $('#refreshOffers').click(function() {
                    var brand = new Array();
                    $("input:checkbox:checked").each(
                        function() {
                            if (this.checked) {
                                brand.push(this.value);
                            }
                        }); //end

                    var scheduler = $("#scheduler").data(
                        "kendoScheduler");
                    scheduler.dataSource.data([]);

                    //var scheduler= scheduler.dataSource;
                    Visualforce.remoting.Manager.invokeAction(
                        '{!$RemoteAction.EventCalendarController.getData}',
                        brand,
                        accStr,
                        region,
                        function(result, event) {
                            if (event.status) {
                                var index;
                                for (index = 0; index <
                                    result.length; ++
                                    index) {
                                    scheduler.dataSource
                                        .add({
                                            id: result[
                                                index
                                            ].Id,
                                            recId: result[
                                                index
                                            ].Id,
                                            start: new Date(
                                                result[
                                                    index
                                                ]
                                                .Offer_Start_Date__c
                                            ),
                                            end: new Date(
                                                result[
                                                    index
                                                ]
                                                .Offer_End_Date__c
                                            ),
                                            title: result[
                                                index
                                            ].Offer_Name__c,
                                            description: result[
                                                index
                                            ].Offer_Description__c
                                        });
                                }
                            }
                        }
                    );
                    scheduler.dataSource.read();
                }); //end




                $(function() {
                    $('#refreshOffers').click();
                }); //end

                $('input[type=checkbox]').change(function() {
                    $('#refreshOffers').click();
                }); //end

                $('#pageId:formId:createOfferBtnId').click(function() {
                    $('#refreshOffers').click();
                }); //end
                

                


            });
        
        function edValueKeyPress()
                {
                    var str = document.getElementById("pageId:formControlId:accSearch");
                    accStr = str.value;
                
                    console.log(accStr);
                    $('#refreshOffers').click();
                }
        function edValueRegion()
                {
                    var str = document.getElementById("pageId:formControlId:accRegionSearch");
                    region = str.value;
                
                    console.log(region);
                    $('#refreshOffers').click();
                }
        
        </script>
